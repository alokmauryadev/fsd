{
    "manifest_version": 3,
    "name": "Productivity Dashboard",
    "version": "1.0",
    "description": "Track Usage. Block Website and use Pomodoro Timer",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "activeTab",
        "tabs",
        "scripting",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "128": "assets/icon128.jpg"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}